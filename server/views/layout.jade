doctype 5
html
  head
    title=title
    meta(name='description', content='A simple outcode-your-friends-or-enemies game')
    meta(name='author', content='Nathan Houle')
    link(rel='stylesheet', href='styles/main.css')
    link(rel='shortcut icon', href='favicon.ico')
    - if (process.env.NODE_ENV === 'development')
      script(src='http://localhost:35729/livereload.js')
    - if (typeof js != undefined)
      script(data-main='scripts/main.js', src='bower_components/requirejs/require.js')
      each script in js
        script(src=script)

  body
    block navbar
    block content
