extends layout

block navbar
  nav.navbar.navbar-fixed-top
    div.navbar-inner
      ul.nav.inline
        li
          h1#masthead-title underscoreboard
        li
          a(href="", id="reset-button") reset code
      ul.nav.inline.pull-right
        li
          h4#current-function-label current function
        li
          h4#current-function-name.small

block content
  section.main
    #editor-player
    #editor-opponent
    iframe#tests

  // Pairing modal. Displays on pageload and disappears when the user gets paired.
  div#pairing-modal.modal.hide.fade
    div.modal-header
      h3 Underscoreboard
    div.modal-body
      p Waiting for a partner...
      p If you're just here to check it out, click <a href='https://underscoreboard.herokuapp.com' target='_blank'>here</a> to open a second tab.

  // Victory modal. Displays when a user wins a round.
  div#victory-modal.modal.hide.fade
    div.modal-header
      h3 You Won
    div.modal-body
      p Hooray! Starting the next round...

  // Loss modal. Displays when a users loses a round.
  div#loss-modal.modal.hide.fade
    div.modal-header
      h3 You Lost
    div.modal-body
      p Better luck next time! Starting the next round...

  // Re-pairing modal. Displays when a user's opponent leaves the room.
  div#repairing-modal.modal.hide.fade
    div.modal-header
      h3 Your Opponent Left
    div.modal-body
      p Finding you a new partner...
